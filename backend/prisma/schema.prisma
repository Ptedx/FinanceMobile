generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expenses  Expense[]
  incomes   Income[]
  budgets   Budget[]
  goals     Goal[]
  alerts    Alert[]
  creditCards CreditCard[]
  invoicePayments InvoicePayment[]
  themePreference String @default("light")
  whatsappNumber  String?   @unique
  integrationTokens IntegrationToken[]
  apiKey          String?   @unique
}

model IntegrationToken {
  id        String   @id @default(uuid())
  key       String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Expense {
  id            String   @id @default(uuid())
  category      String
  value         Float
  date          DateTime
  paymentMethod String
  isRecurring   Boolean
  description   String?
  createdAt     DateTime @default(now())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  creditCardId  String?
  creditCard    CreditCard? @relation(fields: [creditCardId], references: [id], onDelete: SetNull)
}

model Income {
  id            String   @id @default(uuid())
  category      String
  value         Float
  date          DateTime
  isRecurring   Boolean
  description   String?
  createdAt     DateTime @default(now())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  allocations   GoalAllocation[]
}

model Budget {
  id          String   @id @default(uuid())
  category    String
  limitAmount Float
  month       String
  isRecurring Boolean  @default(true)
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model Goal {
  id            String   @id @default(uuid())
  title         String
  targetAmount  Float
  currentAmount Float
  targetDate    DateTime
  type          String
  category      String?
  createdAt     DateTime @default(now())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  allocations   GoalAllocation[]
}

model Alert {
  id        String   @id @default(uuid())
  type      String
  message   String
  category  String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}


model GoalAllocation {
  id        String   @id @default(uuid())
  incomeId  String
  income    Income   @relation(fields: [incomeId], references: [id], onDelete: Cascade)
  goalId    String
  goal      Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)
  amount    Float
  createdAt DateTime @default(now())
}

model CreditCard {
  id          String   @id @default(uuid())
  name        String
  closingDay  Int
  dueDay      Int
  limit       Float
  last4Digits String   @default("0000")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  expenses    Expense[]
  invoicePayments InvoicePayment[]
}

model InvoicePayment {
  id           String     @id @default(uuid())
  creditCardId String
  creditCard   CreditCard @relation(fields: [creditCardId], references: [id])
  amount       Float
  date         DateTime
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  createdAt    DateTime   @default(now())
}
